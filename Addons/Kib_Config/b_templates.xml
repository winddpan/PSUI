                </Backdrop>

                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentTitle" parentKey="Title" inherits="GameTooltipTextSmall" justifyH="CENTER" text="KIBUI">
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" relativePoint="CENTER" x="128" y="5"/>
                                <Anchor point="TOPLEFT" relativePoint="CENTER" x="-128" y="133"/>
                            </Anchors>
