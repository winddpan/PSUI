            <BackgroundInsets left="0" right="64" top="0" bottom="0"/>
        </Backdrop>

        <Layers>
            <Layer level="OVERLAY">
                <FontString parentKey="Text" inherits="GameTooltipTextSmall"></FontString>

                <Texture parentKey="Edge">
                    <Color r="1" g="1" b="1" a="1"/>
