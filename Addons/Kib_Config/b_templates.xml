                <Anchors><Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT"/></Anchors>

                <Backdrop bgFile="Interface\Buttons\WHITE8X8">
                    <Color r="0.078" g="0.078" b="0.075" a="0.9"/>
