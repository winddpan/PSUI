<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">

<!-- CHECKBUTTON ELEMENT -->

    <CheckButton name="Kib_CheckButtonTemplate" virtual="true" enableMouse="true">
        <Size x="128" y="16"/>
        <HitRectInsets><AbsInset left="0" right="0" top="0" bottom="0"/></HitRectInsets>
        <Anchors><Anchor point="RIGHT" x="-64" y="0"/></Anchors>
        <NormalTexture file="Interface\AddOns\Kib_Config\media\boolean"/>
    </CheckButton>

<!-- SLIDER ELEMENT -->

    <Slider name="Kib_SliderTemplate" orientation="HORIZONTAL" virtual="true" enableMouse="true">
        <Size x="128" y="16"/>
        <Anchors><Anchor point="RIGHT" x="-64" y="0"/></Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentTexture" file="Interface\AddOns\Kib_Config\media\slider" setAllPoints="true"/>
            </Layer>
        </Layers>
        <ThumbTexture name="$parentThumb" file="Interface\AddOns\Kib_Config\media\slider_thumb">
            <Size x="16" y="16"/>
        </ThumbTexture>
    </Slider>

<!-- COLOR ELEMENT -->

    <Button name="Kib_ColorTemplate" enableMouse="true" virtual="true">
        <Size x="24" y="12"/>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture parentKey="Texture" setAllPoints="true"><Color r="1" g="1" b="1"/></Texture>
            </Layer>
        </Layers>

        <Frames>
            <Slider parentKey="Slider" minValue="0" maxValue="1" valueStep=".01" hidden="true" orientation="VERTICAL" enableMouse="true" toplevel="true" ObeyStepOnDrag="true">
                <Size x="24" y="128"/>
                <Anchors><Anchor point="BOTTOM"/></Anchors>

                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="Texture" setAllPoints="true"/>
                        <FontString parentKey="Text" inherits="GameTooltipTextSmall">
                            <Anchors><Anchor point="RIGHT"/></Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <ThumbTexture file="Interface\AddOns\Kib_Config\media\colorslider_thumb"><Size x="16" y="16"/></ThumbTexture>
                <Scripts>
                    <OnLeave> self:Hide() </OnLeave>
                </Scripts>
            </Slider>
        </Frames>

        <Scripts>
            <OnLoad>
                self:RegisterForClicks("LeftButtonDown", "RightButtonDown")
            </OnLoad>
            <OnClick>
                if self.Slider:IsShown() then self.Slider:Hide() else self.Slider:Show() end
            </OnClick>
        </Scripts>
    </Button>

<!-- POPUP FRAME -->

    <Frame name="Kib_PopupFrameTemplate" frameStrata="DIALOG" toplevel="true" enableMouse="true" setAllPoints="true" virtual="true">
        <Backdrop bgFile="Interface\Buttons\WHITE8X8">
            <Color r="0.078" g="0.078" b="0.075" a="0.5"/>
        </Backdrop>

        <Frames>
            <Frame name="$parentFrame" parentKey="Frame">
                <Size x="320" y="128"/>
                <Anchors><Anchor point="CENTER"/></Anchors>

                <Backdrop bgFile="Interface\Buttons\WHITE8X8">
                    <Color r="0.078" g="0.078" b="0.075" a="0.9"/>
                </Backdrop>

                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentText" parentKey="Text" inherits="GameTooltipTextSmall" justifyH="CENTER" wordwrap="false" text="">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="20" y="-5"/>
                                <Anchor point="BOTTOMRIGHT" x="-20" y="52"/>
                            </Anchors>
                        </FontString>

                        <Texture name="$parentDivider_Top">
                            <Color r="1" g="1" b="1" a="1"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="-1" y="1"/>
                                <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT"/>
                            </Anchors>
