<Script file="LiteBagItemButtonTemplate.lua"/>

<Texture name="LiteBagEquipSetsTexture" file="Interface\Addons\LiteBag\Artwork\EquipSets" virtual="true" />

<Button name="LiteBagItemButtonTemplate" inherits="ContainerFrameItemButtonTemplate" hidden="true" virtual="true">

    <Size x="37" y="37" />

    <Layers>
        <Layer level="BACKGROUND">
            <Texture name="$parentBackgroundTexture" file="Interface\Buttons\UI-Slot-Background" parentKey="backgroundTexture">
                <Size x="38.5" y="38.5" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="-1" y="-1" />
                </Anchors>
                <TexCoords left="0" right="0.640625" top="0" bottom="0.640625" />
                <Color r="0.5" b="0.5" g="0.5" a="0.8" />
            </Texture>
        </Layer>
        <Layer level="ARTWORK" textureSubLevel="1">
            <Texture name="$parentEquipsetTexture1" inherits="LiteBagEquipSetsTexture" parentKey="eqTexture1" hidden="true">
                <TexCoords left="0.0" right="0.5" top="0.0" bottom="0.5" />
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="CENTER" />
                </Anchors>
            </Texture>
            <Texture name="$parentEquipsetTexture2" inherits="LiteBagEquipSetsTexture" parentKey="eqTexture2" hidden="true">
                <TexCoords left="0.5" right="1.0" top="0.0" bottom="0.5" />
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="CENTER" />
                </Anchors>
            </Texture>
            <Texture name="$parentEquipsetTexture3" inherits="LiteBagEquipSetsTexture" parentKey="eqTexture3" hidden="true">
                <TexCoords left="0.5" right="1.0" top="0.5" bottom="1.0" />
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="CENTER" />
                </Anchors>
            </Texture>
            <Texture name="$parentEquipsetTexture4" inherits="LiteBagEquipSetsTexture" parentKey="eqTexture4" hidden="true">
                <TexCoords left="0.0" right="0.5" top="0.5" bottom="1.0" />
                <Size x="16" y="16" />
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="CENTER" />
                </Anchors>
            </Texture>
        </Layer>
    </Layers>

    <Scripts>
        <!-- No OnClick/OnDrag, we have to inherit them because it's secure. -->
        <OnLoad function="LiteBagItemButton_OnLoad" />
        <OnEnter function="LiteBagItemButton_OnEnter" />
        <OnLeave function="LiteBagItemButton_OnLeave" />
        <OnHide function="LiteBagItemButton_OnHide" />
    </Scripts>

</Button>

</Ui>
