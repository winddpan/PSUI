<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <FontFamily name="PSUICoreSkinFont" virtual="true">
        <Member alphabet="simplifiedchinese">
            <Font font="Fonts\ARKai_T.ttf" height="12" outline="NORMAL"/>
        </Member>
        <Member alphabet="traditionalchinese">
            <Font font="Fonts\blei00d.ttf" height="10" outline="NORMAL"/>
        </Member>
    </FontFamily>

    <Frame name="PSUICoreSkinTimerTemplate" virtual="true" frameStrata="MEDIUM" topLevel="true">
        <Size>
            <AbsDimension x="185" y="24"/>
        </Size>
        <Frames>
            <StatusBar name="$parentBar" parentKey="bar">
                <Size>
                    <AbsDimension x="185" y="10"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER" relativePoint="CENTER">
                        <Offset>
                            <AbsDimension x="0" y="9"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="OVERLAY">
                        <Texture name="$parentSpark" file="Interface\AddOns\PSUICore\media\DBMSpark" alphaMode="ADD">
                            <Size>
                                <AbsDimension x="16" y="30"/>
                            </Size>
                            <Anchors>
                                <Anchor point="CENTER">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentTimer" inherits="PSUICoreSkinFont" text="">
                            <Anchors>
                                <Anchor point="BOTTOMRIGHT" relativePoint="TOPRIGHT">
                                    <Offset>
                                        <AbsDimension x="0" y="3"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                        <FontString name="$parentName" inherits="PSUICoreSkinFont" text="" wordwrap="false">
                            <Anchors>
                                <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="3"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Frame name="$parentIcon1" parentKey="iconLeft">
                        <Size>
                            <AbsDimension x="26" y="26"/>
                        </Size>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT">
                                <Offset>
                                    <AbsDimension x="-4" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Backdrop bgFile="Interface\AddOns\PSUICore\media\Plain" edgeFile="Interface\AddOns\PSUICore\media\Plain">
                            <Color r="0" g="0" b="0" a="0.5"/>
                            <BorderColor r="0" g="0" b="0" a="1"/>
                            <EdgeSize>
                                <AbsValue val="1"/>
                            </EdgeSize>
                            <TileSize>
                                <AbsValue val="16"/>
                            </TileSize>
                            <BackgroundInsets>
                                <AbsInset left="1" right="1" top="1" bottom="1"/>
                            </BackgroundInsets>
                        </Backdrop>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture parentKey="icon">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="1" y="-1"/>
                                        <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                                    </Anchors>
                                    <TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92"/>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>
                    <Frame name="$parentIcon2" parentKey="iconRight">
                        <Size>
                            <AbsDimension x="26" y="26"/>
                        </Size>
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT">
                                <Offset>
                                    <AbsDimension x="4" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Backdrop bgFile="Interface\AddOns\PSUICore\media\Plain" edgeFile="Interface\AddOns\PSUICore\media\Plain">
                            <Color r="0" g="0" b="0" a="0.5"/>
                            <BorderColor r="0" g="0" b="0" a="1"/>
                            <EdgeSize>
                                <AbsValue val="1"/>
                            </EdgeSize>
                            <TileSize>
                                <AbsValue val="16"/>
                            </TileSize>
                            <BackgroundInsets>
                                <AbsInset left="1" right="1" top="1" bottom="1"/>
                            </BackgroundInsets>
                        </Backdrop>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture parentKey="icon">
                                    <Anchors>
                                        <Anchor point="TOPLEFT" x="1" y="-1"/>
                                        <Anchor point="BOTTOMRIGHT" x="-1" y="1"/>
                                    </Anchors>
                                    <TexCoords left="0.08" right="0.92" top="0.08" bottom="0.92"/>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>
                </Frames>
                <BarTexture name="$parentTexture" parentKey="texture" file="Interface\AddOns\PSUICore\media\statusbar2"/>
                <BarColor r="1.0" g="0.8" b="0.0"/>
            </StatusBar>
            <Frame parentKey="backdrop" frameStrata="BACKGROUND">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="$parentBar" x="-1" y="1"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parentBar" x="1" y="-1"/>
                </Anchors>
                <Backdrop bgFile="Interface\AddOns\PSUICore\media\Plain" edgeFile="Interface\AddOns\PSUICore\media\Plain">
                    <Color r="0" g="0" b="0" a="0.5"/>
                    <BorderColor r="0" g="0" b="0" a="1"/>
                    <EdgeSize>
                        <AbsValue val="1"/>
                    </EdgeSize>
                    <TileSize>
                        <AbsValue val="16"/>
                    </TileSize>
                    <BackgroundInsets>
                        <AbsInset left="1" right="1" top="1" bottom="1"/>
                    </BackgroundInsets>
                </Backdrop>
            </Frame>
        </Frames>
        <Scripts>
            <OnLoad>
                --print("Bar loaded", self.bar.iconLeft:IsShown(), self.bar.iconRight:IsShown())
                local function setTexture(self, texture)
                    self.icon:SetTexture(texture)
                end
                self.bar.iconLeft.SetTexture = setTexture
                self.bar.iconRight.SetTexture = setTexture
            </OnLoad>
        </Scripts>
    </Frame>
</Ui>
